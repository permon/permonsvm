# -*- mode: makefile -*-

-include ${PERMON_DIR}/lib/permon/conf/permon_variables

PERMON_MAIN_HEADER          = include/permonsys.h

PERMON_PKG_PREFIX         = PERMON_SVM
PERMON_SVM_NAME           = permonsvm
PERMON_SVM_MAIN_HEADER    = include/permonsvm.h
PERMON_SVM_LIB_DIR        = ${PERMON_SVM_DIR}/${PETSC_ARCH}/lib
PERMON_SVM_INCLUDE        = -I${PERMON_SVM_DIR}/include -I${PERMON_SVM_DIR}/${PETSC_ARCH}/include
PERMON_SVM_CC_INCLUDES    = ${PERMON_SVM_INCLUDE} ${PERMON_CC_INCLUDES}
PERMON_SVM_FC_INCLUDES    = ${PERMON_SVM_INCLUDE} ${PERMON_FC_INCLUDES}
PERMON_SVM_CCPPFLAGS      = ${PERMON_SVM_INCLUDE} ${PERMON_CCPPFLAGS}
PERMON_SVM_FCPPFLAGS      = ${PERMON_SVM_INCLUDE} ${PERMON_FCPPFLAGS}
PERMON_SVM_C_SH_LIB_PATH  = ${CC_LINKER_SLFLAG}${PERMON_SVM_LIB_DIR}
PERMON_SVM_F_SH_LIB_PATH  = ${FC_LINKER_SLFLAG}${PERMON_SVM_LIB_DIR}
PERMON_SVM_DEP_LIBS       = ${PERMON_LIB}

PERMON_SVM_LIB_BASIC      = -l${PERMON_SVM_NAME}
PERMON_SVM_LIB = ${PERMON_SVM_C_SH_LIB_PATH} -L${PERMON_SVM_LIB_DIR} ${PERMON_SVM_LIB_BASIC} ${PERMON_SVM_DEP_LIBS}

PERMON_SVM_LOG          ?= ${PERMON_PKG_LIB_DIR}/permonsvm/conf/make.log
PERMON_SVM_ERRLOG       ?= ${PERMON_PKG_LIB_DIR}/permonsvm/conf/error.log

#  Escape codes to change the text color on xterms and terminals
PETSC_TEXT_HILIGHT ?= "\033[1;31m"
PETSC_TEXT_NORMAL ?= "\033[0;39m\033[0;49m"
